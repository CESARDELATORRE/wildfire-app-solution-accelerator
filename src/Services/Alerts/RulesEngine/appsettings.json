{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDb": {
    "UrlPrefix": "mongodb",
    "Hostname": "mongo",
    "PortNumber": "27017",
    "DatabaseName": "detections"
  },
  "AlertsClassesConfig": {
    "ClassesConfig": [
      {
        "Name": "car",
        "Alerts": [ "VehicleDetected" ]
      },
      {
        "Name": "person",
        "Alerts": [ "PersonDetected" ]
      },
      {
        "Name": "fire",
        "Alerts": [ "FireDetected" ]
      },
      {
        "Name": "smoke",
        "Alerts": [ "SmokeDetected" ]
      }
    ],
    "AlertsConfig": [
      {
        "AlertName": "VehicleDetected",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 30
          }
        ]
      },
      {
        "AlertName": "PersonDetected",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 60
          },
          {
            "RuleName": "MinimumNumberOfObjectsDetected",
            "DetectedObject": "person",
            "NumberfObjects": 1
          }
        ]
      },
      {
        "AlertName": "FireDetected",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 70
          },
          {
            "RuleName": "MinimumNumberOfObjectsDetected",
            "DetectedObject": "fire",
            "NumberfObjects": 1
          }
        ]
      },
      {
        "AlertName": "SmokeDetected",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 70
          },
          {
            "RuleName": "MinimumNumberOfObjectsDetected",
            "DetectedObject": "smoke",
            "NumberfObjects": 1
          }
        ]
      }
    ]
  }
}